{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        // this enables stricter inference for data properties on `this`
        // "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "exclude": ["node_modules", "**/*.spec.ts"],
    "include": ["resources/**/*", "resources/**/*.vue", "**/*.d.ts"],
}
